<% require 'rest-client'

# puts RestClient
search_term = @creature.name
response = RestClient.get 'http://www.reddit.com/search.json', {:params => {:q => search_term, :limit => 10}}

# puts response.code

if(response.code==200)
  response_object = JSON.parse(response)
  reddit_posts = response_object['data']['children']

  reddit_posts.each do |post|%>
    <%= post['data']['title']%>
    <%= "http://www.reddit.com#{post['data']['permalink']}"%>
  <%end
else%>
    <%= "an error happened"%>
    <%= response %>
    <%= response.code %>
<% end %>